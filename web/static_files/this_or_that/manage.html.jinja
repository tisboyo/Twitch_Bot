</head>
<body>
    <script src="/thisorthat/manage.js"></script>

    <table border=1>
    <tr><td colspan=10 align=center>
        <div id="status">
            {{ message }}
        </div>
        </td>
    </tr>
        <tr>
            <td>ID</td>
            <td>Enabled</td>
            <td>Answer 1</td>
            <td>Answer 2</td>
